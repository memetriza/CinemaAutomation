@model IList<CinemaAutomation.Areas.Admin.ViewModels.GenreCheckBox>
<div class="panel panel-default col-md-5 col-md-offset-2">
    <div class="panel-heading">Türler</div>
    <div class="panel-body">
        <ul class="list-group">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <li class="list-group-item">
                    @Html.Hidden("Genres[" + i + "].Id", Model[i].Id)

                    <label for="Genres_@(i)__IsChecked">
                        @Html.CheckBox("Genres[" + i + "].IsChecked", Model[i].IsChecked)
                        @Model[i].Name
                    </label>
                </li>
            }
        </ul>
    </div>
</div>